<UserControl x:Class="susalem.EasyDemo.Views.AddCabinetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">

    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <!-- 假设你已经有 ValidationTextBoxStyle -->
    </UserControl.Resources>

    <AdornerDecorator>
        <Grid Margin="20">
            <Grid.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="/susalem.EasyDemo;component/Resources/ValidationTextBoxStyle.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 1. 柜号ID 
            <TextBlock Grid.Row="0" Text="柜号ID (数字):" />
            <TextBox Grid.Row="0" Grid.Column="1" Height="40" VerticalContentAlignment="Center"
                     Style="{StaticResource ValidationTextBoxStyle}"
                     Tag="{Binding NewCabinet.IsFormValid, UpdateSourceTrigger=PropertyChanged}"
                     Text="{Binding NewCabinet.CabinetId, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
            <TextBlock Grid.Row="0" Grid.Column="2" Text="* 唯一标识，如 1, 2, 3" Foreground="Gray" FontSize="14" HorizontalAlignment="Left" Margin="10,0,0,0"/>
-->
            <!-- 2. 格口显示名称 -->
            <TextBlock Grid.Row="1" Text="格口显示名称:" />
            <TextBox Grid.Row="1" Grid.Column="1" Height="40" VerticalContentAlignment="Center"
                     Style="{StaticResource ValidationTextBoxStyle}"
                     Tag="{Binding NewCabinet.IsFormValid, UpdateSourceTrigger=PropertyChanged}"
                     Text="{Binding NewCabinet.ChamName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
            <TextBlock Grid.Row="1" Grid.Column="2" Text="* 如：A-01号格" Foreground="Gray" FontSize="14" HorizontalAlignment="Left" Margin="10,0,0,0"/>

            <!-- 3. 锁地址 -->
            <TextBlock Grid.Row="2" Text="锁信号地址:" />
            <TextBox Grid.Row="2" Grid.Column="1" Height="40" VerticalContentAlignment="Center"
                     Style="{StaticResource ValidationTextBoxStyle}"
                     Tag="{Binding NewCabinet.IsFormValid, UpdateSourceTrigger=PropertyChanged}"
                     Text="{Binding NewCabinet.LockAddress, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            <!-- 4. 门反馈地址 -->
            <TextBlock Grid.Row="3" Text="门反馈地址:" />
            <TextBox Grid.Row="3" Grid.Column="1" Height="40" VerticalContentAlignment="Center"
                     Style="{StaticResource ValidationTextBoxStyle}"
                     Tag="{Binding NewCabinet.IsFormValid, UpdateSourceTrigger=PropertyChanged}"
                     Text="{Binding NewCabinet.DoorAddress, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            <!-- 5. 绿灯地址 -->
            <TextBlock Grid.Row="4" Text="绿灯地址:" />
            <TextBox Grid.Row="4" Grid.Column="1" Height="40" VerticalContentAlignment="Center"
                     Style="{StaticResource ValidationTextBoxStyle}"
                     Tag="{Binding NewCabinet.IsFormValid, UpdateSourceTrigger=PropertyChanged}"
                     Text="{Binding NewCabinet.GreenLightAddress, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            <!-- 6. 红灯地址 -->
            <TextBlock Grid.Row="5" Text="红灯地址:" />
            <TextBox Grid.Row="5" Grid.Column="1" Height="40" VerticalContentAlignment="Center"
                     Style="{StaticResource ValidationTextBoxStyle}"
                     Tag="{Binding NewCabinet.IsFormValid, UpdateSourceTrigger=PropertyChanged}"
                     Text="{Binding NewCabinet.RedLightAddress, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            <!-- 7. 添加按钮 -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="6"   >
                <Button 
        Content="添加机柜" 
        Command="{Binding AddCommand}" Margin="10"
        Width="120" Height="40" FontSize="20"/>

                <Button 
          Content="清空" 
          Command="{Binding ClearCommand}"
                    Margin="10"
          Width="120" Height="40" FontSize="20"/>
            </StackPanel>
          
        </Grid>
    </AdornerDecorator>
</UserControl>